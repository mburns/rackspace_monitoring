type: agent.filesystem
label: Filesystem check on <%= @mount %>
disabled: <%= node['monitoring']['filesystem']['disabled'] %>
period: <%= node['monitoring']['filesystem']['period'] %>
timeout: <%= node['monitoring']['filesystem']['timeout'] %>
details:
  target: <%= @mount %>
<% if node['monitoring']['filesystem']['alarm'] == true %>
alarms:
    alarm-disk-size:
        label: usage on <%= @mount %>
        notification_plan_id: <%= node['monitoring']['notification_plan_id'] %>
        criteria: |
            if (percentage(metric['used'], metric['total']) > <%= node['monitoring']['filesystem']['crit']  %> ) {
                return new AlarmStatus(CRITICAL, 'Disk usage is above <%= node['monitoring']['filesystem']['crit'] %>%, #{used} out of #{total}');
            }
            if (percentage(metric['used'], metric['total']) > <%= node['monitoring']['filesystem']['warn'] %> ) {
                return new AlarmStatus(WARNING, 'Disk usage is above <%= node['monitoring']['filesystem']['warn'] %>%, #{used} out of #{total}');
            }
            return new AlarmStatus(OK, 'Disk usage is below your warning threshold of <%= node['monitoring']['filesystem']['warn'] %>%, #{used} out of #{total}');
<% end %>
