#

type    : agent.plugin
label   : <%= @label %>
period  : <%= @period || 60 %>
timeout : <%= @timeout || 30 %>
details :
    file : dir_stats.sh
    args : [ "<%= @target %>" ]
alarms:
<% if @max_size_mb_warn != nil || @max_size_mb_crit != nil -%>
    max-dir-size:
        label: Size of <%= @target %>
        notification_plan_id: <%= @notification_plan_id %>
        criteria: |
<% if @max_size_mb_crit != nil -%>
<% if @consecutive_count != nil -%>
            :set consecutiveCount=<%= @consecutive_count %>
<% end -%>
            if (metric['total_size'] > <%= @max_size_mb_crit %>) {
                return new AlarmStatus(CRITICAL, 'Directory uses #{total_size} MB, above your critical threshold of <%= @max_size_mb_crit %> MB');
            }
<% end -%>
<% if @max_size_mb_warn != nil -%>
            if (metric['total_size'] > <%= @max_size_mb_warn %>) {
                return new AlarmStatus(WARNING, 'Directory uses #{total_size} MB, above your warning threshold of <%= @max_size_mb_warn %> MB');
            }
<% end -%>
            return new AlarmStatus(OK, 'Directory uses #{total_size} MB, below your threshold of <%= @max_size_mb_warn != nil ? @max_size_mb_warn : @max_size_mb_crit %> MB');
<% end -%>
<% if @max_files_warn != nil || @max_files_crit != nil  -%>
    max-file-count:
        label: File count in <%= @target %>
        notification_plan_id: <%= @notification_plan_id %>
        criteria: |
<% if @max_files_crit != nil -%>
            if (metric['total_files'] > <%= @max_files_crit %>) {
                return new AlarmStatus(CRITICAL, 'Directory contains #{total_files} files, above your critical threshold of <%= @max_files_crit %>');
            }
<% end -%>
<% if @max_files_warn != nil -%>
            if (metric['total_files'] > <%= @max_files_warn %>) {
                return new AlarmStatus(WARNING, 'Directory contains #{total_files} files, above your warning threshold of <%= @max_files_warn %>');
            }
<% end -%>
            return new AlarmStatus(OK, 'Directory contains #{total_files} files, below your threshold of <%= @max_files_warn != nil ? @max_files_warn : @max_files_crit %>');
<% end -%>
