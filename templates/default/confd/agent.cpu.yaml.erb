type: agent.cpu
label: CPU
disabled: <%= node['monitoring']['cpu']['disabled'] %>
period: <%= node['monitoring']['cpu']['period'] %>
timeout: <%= node['monitoring']['cpu']['timeout'] %>
<% if node['monitoring']['cpu']['alarm'] == true %>
alarms:
    alarm-cpu:
        label: CPU Usage
        notification_plan_id: <%= node['monitoring']['notification_plan_id'] %>
        criteria: |
            if (metric['usage_average'] > <%= node['monitoring']['cpu']['crit'] %> ) {
              return new AlarmStatus(CRITICAL, 'CPU usage is #{usage_average}%, above your critical threshold of <%= node['monitoring']['cpu']['crit'] %>%');
            }
            if (metric['usage_average'] > <%= node['monitoring']['cpu']['warn'] %> ) {
              return new AlarmStatus(WARNING, 'CPU usage is #{usage_average}%, above your warning threshold of <%= node['monitoring']['cpu']['warn'] %>%');
            }
            return new AlarmStatus(OK, 'CPU usage is #{usage_average}%, below your warning threshold of <%= node['monitoring']['cpu']['warn'] %>%');
<% end %>
