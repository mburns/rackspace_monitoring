type    : agent.network
label   : Network check on <%= node['monitoring']['network']['target'] %>
disabled: <%= node['monitoring']['network']['disabled'] %>
period  : <%= node['monitoring']['network']['period'] %>
timeout : <%= node['monitoring']['network']['timeout'] %>
details :
  target: <%= node['monitoring']['network']['target'] %>
<% if node['monitoring']['network']['alarm'] == true %>
alarms  :
    alarm-network-receive:
        label: Network receive rate on <%= node['monitoring']['network']['target'] %>
        notification_plan_id: <%= node['monitoring']['notification_plan_id'] %>
        criteria: |
            if (rate(metric['rx_bytes']) > <%= node['monitoring']['network']['recv']['crit'] %> ) {
              return new AlarmStatus(CRITICAL, "Network receive rate on <%= node['monitoring']['network']['target'] %> is above your critical threshold of <%= node['monitoring']['network']['recv']['crit'] %>B/s");
            }
            if (rate(metric['rx_bytes']) > <%= node['monitoring']['network']['recv']['warn'] %> ) {
              return new AlarmStatus(WARNING, "Network receive rate on <%= node['monitoring']['network']['target'] %> is above your warning threshold of <%= node['monitoring']['network']['recv']['warn'] %>B/s");
            }
            return new AlarmStatus(OK, "Network receive rate on <%= node['monitoring']['network']['target'] %> is below your warning threshold of <%= node['monitoring']['network']['recv']['warn'] %>B/s");
    alarm-network-transmit:
        label: Network transmit rate on <%= node['monitoring']['network']['target'] %>
        notification_plan_id: <%= node['monitoring']['notification_plan_id'] %>
        criteria: |
            if (rate(metric['tx_bytes']) > <%= node['monitoring']['network']['send']['crit'] %>) {
              return new AlarmStatus(CRITICAL, "Network transmit rate on <%= node['monitoring']['network']['target'] %> is above your critical threshold of <%= node['monitoring']['network']['send']['crit'] %>B/s");
            }
            if (rate(metric['tx_bytes']) > <%= node['monitoring']['network']['send']['warn'] %>) {
              return new AlarmStatus(WARNING, "Network transmit rate on <%= node['monitoring']['network']['target'] %> is above your warning threshold of <%= node['monitoring']['network']['send']['warn'] %>B/s");
            }
            return new AlarmStatus(OK, "Network transmit rate on <%= node['monitoring']['network']['target'] %> is below your warning threshold of <%= node['monitoring']['network']['send']['warn'] %>B/s");
<% end %>

